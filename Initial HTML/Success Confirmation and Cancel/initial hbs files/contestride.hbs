<div class="contest-ride-container">
  <h2>Contest a Ride</h2>
  
  <form id="contestRideForm" enctype="multipart/form-data">
    <div class="form-group">
      <label for="description">Description of Incident:</label>
      <textarea id="description" name="description" rows="4" placeholder="Describe what happened..." required></textarea>
    </div>
    
    <div class="form-group">
      <label for="supportingDocuments">Upload Supporting Documents:</label>
      <input type="file" id="supportingDocuments" name="supportingDocuments" accept=".jpg,.jpeg,.png,.pdf">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit Contest</button>
  </form>
</div>
